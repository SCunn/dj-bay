
  <div class="mainCont">
    <h1>You Were looking for something that we just dont have</h1>
    </div>
    

<br><br>

 <div class="mainCont">
  

     
      <% @items.each do |item| %>
        
          <div class="itemhols mb-4">
           
              <div class="card h-100">
                  <%= link_to (image_tag item.image_url, :style => "width: 100%"), item %>
                  <h4 class="card-header"><%= item.artist %> : <%= item.album %></h4>
                  <div class="card-body">
                    
                  
                  
                  <p class="card-text">Genre: <%= item.genre %></p>
                  
                  <p>Condition: <%= item.condition %></p>
                  
                  <p>Price: <%= number_to_currency(item.price, :unit => "â‚¬") %></p>
                  
                  </div>
                  <div class="card-footer">
                    <p>
                    <%= link_to 'Show', item, :class => "btn btn-primary", :style => "margin:1%", :role => "button" %>
                      <a href="/cart/<%= item.id %>" class="btn btn-primary" style="margin:1%" >Add me to cart</a>
                    
                    <% if session[:login]==1 %>
                      <%= link_to 'Edit', edit_item_path(item), :class => "btn btn-primary", :style => "margin:1%", :role => "button" %>
                      <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary", :style => "margin:1%", :role => "button" %>
                    <% end %>
                    </p>
                </div>
              </div>
          
         
          
         </div>
         <% end %>
         
 </div>